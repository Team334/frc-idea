<idea-plugin version="2">
    <id>com.ze.frc</id>
    <name>FRC Intellij Plugin</name>
    <version>1.0</version>
    <vendor email="zelkatani@gmail.com" url="https://github.com/ze">Zakaria Elkatani</vendor>

    <description><![CDATA[
        A WPILib Plugin for FRC teams who use IntelliJ
    ]]></description>

    <change-notes><![CDATA[
        In Development
    ]]></change-notes>

    <idea-version since-build="145.0"/>

    <extensions defaultExtensionNs="com.intellij"></extensions>

    <application-components></application-components>

    <actions>
        <group text="New Project">
            <separator/>
            <add-to-group group-id="NewProjectOrModuleGroup" anchor="last"/>
            <action class="com.team334.frcplugin.project.ProjectTemplate" id="NewProjectTemplate"
                    icon="/icons/wpi.png" text="WPILib Project" description="Create a new WPILib Project"
            />
            <separator/>
        </group>

        <group text="WPILib">
            <add-to-group group-id="MainMenu" relative-to-action="RunMenu" anchor="after"/>
            <action class="com.team334.frcplugin.wizard.Installer" id="Install" icon="/icons/wpi.png"
                    text="Install WPILib" description="First time installation of WPILib"
            />
            <action class="com.team334.frcplugin.deploy.Deploy" id="DeployAction"
                    text="Deploy" description="Deploy robot code"
            />
            <action class="com.team334.frcplugin.wizard.Properties" id="Properties"
                    text="Modify Properties" description="Modify Properties"
            />
        </group>
    </actions>

</idea-plugin>